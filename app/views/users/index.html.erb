<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="well" style="margin-top: 40px;">
        <h3 style="text-align:center;"><i class="fa fa-lightbulb-o" style="margin-right: 10px;"></i></h3>
      </div>
    </div>
    <div class="col-md-4 col-md-offset-2">
      <h3 class="well well-sm">Register</h3>

      <!-- REGISTRAION ERRORS -->
      <%  if flash[:reg_errors]
        flash[:reg_errors].each do |error| %>
        <p style="color: rgb(193, 12, 12)"><%= error %></p>
      <%  end
      end %>

      <!-- REGISTRAION SUCCESS -->
      <% if flash[:success]
        flash[:success].each do |message| %>
          <p style="color: rgb(2, 150, 8);"><%= message %></p>
        <% end %>
      <% end %>

      <form role="form" action="/register" method="post">
        <div class="form-group">
          <label for="first_name">First Name:</label>
          <input type="first_name" class="form-control" id="first_name" name="user[first_name]">
        </div>
        <div class="form-group">
          <label for="last_name">Last Name:</label>
          <input type="last_name" class="form-control" id="last_name" name="user[last_name]">
        </div>
        <div class="form-group">
          <label for="alias">Alias:</label>
          <input type="alias" class="form-control" id="alias" name="user[alias]">
        </div>
        <div class="form-group">
          <label for="email">Email address:</label>
          <input type="email" class="form-control" id="email" name="user[email]">
        </div>
        <div class="form-group">
          <label for="pwd">Password:</label>
          <input type="password" class="form-control" id="pwd" name="user[password]">
          <p style="margin-top:5px;">* Password should contain at least 8 characters</p>
        </div>
        <div class="form-group">
          <label for="confirm_password">Confirm Password:</label>
          <input type="password" class="form-control" id="confirm_password" name="user[confirm_pw]">
        </div>
        <button type="submit" class="btn btn-default pull-right">Join</button>
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      </form>
    </div>
    <!-- Login section -->
    <div class="col-md-4">
      <h3 class="well well-sm">Login</h3>
      <!-- LOGIN ERRORS -->
      <% if flash[:errors]
        flash[:errors].each do |error| %>
          <p style="color: rgb(193, 12, 12)"><%= error %></p>
        <% end %>
      <% end %>

      <form role="form" action="/login" method="post">
        <div class="form-group">
          <label for="email">Email address:</label>
          <input type="email" class="form-control" id="email" name="email">
        </div>
        <div class="form-group">
          <label for="pwd">Password:</label>
          <input type="password" class="form-control" id="pwd" name="password">
        </div>
        <button type="submit" class="btn btn-default pull-right">Login</button>
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      </form>
    </div>
    </div>
  </div>
</div>
